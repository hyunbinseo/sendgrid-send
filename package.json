{
	"name": "sendgrid-send",
	"version": "1.0.4",
	"description": "Generate JSON body for the SendGrid mail API",
	"scripts": {
		"build": "tsup index.ts --format cjs,esm --dts --clean"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/hyunbinseo/sendgrid-send.git"
	},
